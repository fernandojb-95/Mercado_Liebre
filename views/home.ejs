<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head.ejs') %>
    <title>Mercado liebre</title>
</head>
<body>
 <%- include('./partials/header.ejs') %>
    <section class="container">
        <div class="banner">
        </div>
    </section>
    
    <main>
        <section class="products-menu">
            <h2>Basado en tu Ãºltima visita</h2>
            <div class="products-grid">
                <% products.forEach(article => { 
                    if(article.category == 'visited') { %>
                <a href= "/product/detail/<%= article.id %>" class="product">
                    <img src="/img/products/<%=article.image%>" alt="Cafetera Moulinex">
                    <div class="product-info">
                        <i class="fas fa-truck"></i>
                        <p class="item-precio">$<%= article.price %></p>
                        <p class="item-descuento"><%= article.discount %>% OFF</p>
                        <p class="item-descripcion"><%= article.name %></p>
                    </div>
                </a>
                <% }}) %>
            </div>
            
        </section>
        <section class="products-menu">
            <h2>Seccion de ofertas</h2>
            <div class="products-grid">
                <% products.forEach(article => { 
                    if(article.category == 'in-sale') { %>
                <a href= "/product/detail/<%= article.id %>" class="product">
                    <img src="/img/products/<%=article.image%>" alt="Cafetera Moulinex">
                    <div class="product-info">
                        <i class="fas fa-truck"></i>
                        <p class="item-precio">$<%= article.price %></p>
                        <p class="item-descuento"><%= article.discount %>% OFF</p>
                        <p class="item-descripcion"><%= article.name %></p>
                    </div>
                </a>
                <% }}) %>
            </div>
        </section>
    </main>
    <%- include('./partials/footer.ejs') %>
</body>
</html>